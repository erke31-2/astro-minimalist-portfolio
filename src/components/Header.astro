---
interface Props {
  currentRoute: string;
}

const { currentRoute } = Astro.props;
---

<header class="flex flex-col items-center gap-y-8">
  <div class="w-[150px] sm:w-[200px] aspect-square rounded-full">
    <img
      src="/images/profilepic.jpg"
      alt="profile picture of Kaung"
      class="w-full h-full rounded-full object-cover object-center"
    />
  </div>
  <h1 class="flex flex-col items-center text-lightGray">
    Hi There, I'm<span class="text-2xl font-bold text-softWhite"
      >Shine Maw Arnt {currentRoute}</span
    >
  </h1>
  <nav>
    <ul class="w-[230px] mx-auto grid grid-cols-2 text-sm gap-6">
      <li
        class={`${currentRoute === "/" ? "border-oceanBlue text-oceanBlue" : "border-coolGray text-coolGray"} w-fit border  hover:border-oceanBlue hover:text-oceanBlue transition-colors duration-300 ease-in-out rounded-md`}
      >
        <a href="/" class="inline-block text-nowrap px-4 py-2 font-medium">About Me</a>
      </li>
      <li
        class={`${currentRoute === "/teaching" ? "border-oceanBlue text-oceanBlue" : "border-coolGray text-coolGray"} w-fit border  hover:border-oceanBlue hover:text-oceanBlue transition-colors duration-300 ease-in-out rounded-md`}
      >
        <a href="/teaching" class="inline-block px-4 py-2 text-nowrap font-medium"
          >Teaching</a
        >
      </li>
      <li
        class={`${currentRoute === "/contact" ? "border-oceanBlue text-oceanBlue" : "border-coolGray text-coolGray"} col-span-full justify-self-center w-fit border  hover:border-oceanBlue hover:text-oceanBlue transition-colors duration-300 ease-in-out rounded-md`}
      >
        <a href="/contact" class="inline-block px-4 py-2 text-nowrap font-medium"
          >Contact Me</a
        >
      </li>
    </ul>
  </nav>
</header>
